{
  "name": "@project-starter/server",
  "version": "0.1.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"No test specified\" && exit 0",
    "start": "nodemon --watch 'src/**' --ext 'ts,json' --exec 'npm run lint && ts-node src/index.ts | bunyan'",
    "start:production": "cd build && authbind --deep pm2 start ./index.js --watch --restart-delay 10000 --name server",
    "typeorm": "typeorm-ts-node-commonjs",
    "build": "NODE_OPTIONS=--max-old-space-size=4096 tsc --build --force",
    "lint": "eslint ./src --ext .ts",
    "migration:generate": "TYPEORM_CACHE=false ts-node --transpile-only ./node_modules/typeorm/cli.js migration:generate -d src/data-source.ts src/migrations/$npm_config_name",
    "migration:create": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:create src/migrations/$npm_config_name",
    "migration:revert": "TYPEORM_CACHE=false ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert -d src/data-source.ts",
    "migration:run": "TYPEORM_CACHE=false ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run -d src/data-source.ts -t each"
  },
  "author": "Alex",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bunyan": "^1.8.8",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^17.0.2",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.3",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@graphql-tools/merge": "^8.2.9",
    "@project-starter/shared": "file:shared",
    "apollo-server": "^3.6.1",
    "apollo-server-express": "^3.6.6",
    "aws-sdk": "^2.1214.0",
    "bcrypt": "^5.0.1",
    "bunyan": "^1.8.15",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "graphql": "^15.8.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "redis": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.6",
    "uuid": "^9.0.0"
  },
  "private": true
}
